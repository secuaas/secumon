# SecuMon Environment Configuration Example
# Copy this file to .env and fill in the values

# Environment
ENVIRONMENT=dev  # dev, staging, prod

# Database - PostgreSQL (Config)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=secumon
POSTGRES_USER=secumon
POSTGRES_PASSWORD=

# Database - TimescaleDB (Metrics)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=metrics
TIMESCALE_USER=metrics_writer
TIMESCALE_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# NATS
NATS_URL=nats://localhost:4222

# Loki
LOKI_URL=http://localhost:3100

# Authentication
JWT_SECRET=
JWT_EXPIRY=24h

# API
API_PORT=8080
API_HOST=0.0.0.0
API_TLS_ENABLED=false
API_TLS_CERT=
API_TLS_KEY=

# WireGuard
WIREGUARD_INTERFACE=wg0
WIREGUARD_PORT=51820
WIREGUARD_SUBNET=10.200.0.0/16

# Integrations
SECUOPS_API_URL=https://api.secuaas.ovh
SECUSCAN_API_URL=https://api.secuscan.io

# Alerting
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@secuaas.ovh

SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=

# OVH
OVH_ENDPOINT=ovh-eu
OVH_APPLICATION_KEY=
OVH_APPLICATION_SECRET=
OVH_CONSUMER_KEY=

# Observability
SENTRY_DSN=
LOG_LEVEL=info  # debug, info, warn, error
